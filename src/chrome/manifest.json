{
  "manifest_version": 3,
  "name": "__MSG_manifestName__",
  "version": "3.1.4",

  "default_locale": "en",
  "description": "__MSG_manifestDesc__",
  "icons": { "16": "icons/icon16.png",
             "48": "icons/icon48.png",
             "128": "icons/icon128.png" },

  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "options_page": "options/options.html",

  "input_components": [ {
      "name": "__MSG_manifestImeName__",
      "description": "__MSG_manifestImeDesc__",
      "type": "ime",
      "id": "cros_cin",
      "indicator": "JS",
      "language": ["zh-TW", "zh-HK", "zh"],
      "layouts": ["us"]
  } ],
  "action": {
    "default_icon": {
        "19": "icons/page_icon19.png"
    },
    "default_title": "__MSG_manifestName__",
    "default_popup": "ime_api/ipc/menu.html"
  },
  "content_scripts": [ {
    "js": [
        "content.js"
    ],
    "run_at": "document_idle",
    "all_frames": true,
    "matches": ["http://*/*", "https://*/*"]
  } ],
  "web_accessible_resources": [
    { "resources": [
      "*.js",
      "ime_api/*",
      "jquery/*",
      "jscin/*",
      "tables/*"
    ], "matches": [
    "*://*/*"
    ]}
  ],
  "permissions": [
    "input",
    "storage", "unlimitedStorage"
  ],
  "host_permissions": [
    "http://*/", "https://*/"
  ]

}
